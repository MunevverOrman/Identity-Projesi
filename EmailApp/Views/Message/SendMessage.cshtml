@model SendMessageViewModel

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <form method="post" asp-action="SendMessage">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Yeni Mail Gönder</h3>
            </div>

            <div class="card-body">
                <div class="form-group">
                    <input class="form-control" asp-for="ReceiverEmail" placeholder="Kime:">
                </div>
                <div class="form-group">
                    <input class="form-control" asp-for="Subject" placeholder="Konu:">
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Body" style="height: 300px"></textarea>
                </div>
            </div>

            <div class="card-footer">
                <div class="float-right">
                  
                    <button type="submit" name="actionType" value="draft" class="btn btn-default">
                        <i class="fas fa-pencil-alt"></i> Taslak
                    </button>

                    
                    <button type="submit" name="actionType" value="send" class="btn btn-primary">
                        <i class="far fa-envelope"></i> Gönder
                    </button>
                </div>
            </div>

        </div>
    </form>
</div>

@model List<Message>
@{
    ViewData["Title"] = "Drafts";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">

    <!-- Gönderildi Bildirimi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Taslak Mesajlar</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Search Mail">
                    <div class="input-group-append">
                        <div class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <!-- Başlık satırı -->
                    <thead>
                        <tr>
                            <th>Okundu Bilgisi</th>
                            <th>Önemli</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var msg in Model.Where(m => m.IsDraft))
                        {
                            <tr>
                                <!-- Okundu / Okunmadı -->
                                <td>
                                    <form asp-controller="Message" asp-action="ToggleReadDraft" method="post">
                                        <input type="hidden" name="messageId" value="@msg.MessageId" />
                                        <button type="submit" class="btn btn-link">
                                            @if (msg.IsRead)
                                            {
                                                <span class="badge bg-success">Okundu</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Okunmadı</span>
                                            }
                                        </button>
                                    </form>
                                </td>


                                <!-- Yıldız / Önemli -->
                                <td>
                                    <form asp-controller="Message" asp-action="ToggleImportantDraft" method="post">
                                        <input type="hidden" name="messageId" value="@msg.MessageId" />
                                        <button type="submit" class="btn btn-link">
                                            @if (msg.IsImportant)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        </button>
                                    </form>
                                </td>
                                Bu şekilde:
                                <!-- Gönderen -->
                                <td class="mailbox-name">
                                    <a href="/Message/MessageDetail/@msg.MessageId">@msg.Sender.FirstName @msg.Sender.LastName</a>
                                </td>

                                <!-- Konu -->
                                <td class="mailbox-subject"><b>@msg.Subject</b></td>

                                <!-- Tarih -->
                                <td class="mailbox-date">@msg.SendDate.ToShortDateString()</td>

                                <!-- İşlem Butonları -->
                                <td>
                                    <div class="btn-group" role="group">

                                        <!-- Gönder Butonu -->
                                        <form asp-controller="Message" asp-action="SendDraft" method="post" style="display:inline-block;">
                                            <input type="hidden" name="messageId" value="@msg.MessageId" />
                                            <button type="submit" class="btn btn-default btn-sm" title="Mesajı Gönder">
                                                <i class="far fa-envelope"></i>
                                            </button>
                                        </form>

                                        <!-- Düzenle Butonu -->
                                        <form asp-controller="Message" asp-action="EditDraft" method="get" style="display:inline-block;">
                                            <input type="hidden" name="messageId" value="@msg.MessageId" />
                                            <button type="submit" class="btn btn-default btn-sm" title="Mesajı Düzenle">
                                                <i class="fas fa-pencil-alt"></i>
                                            </button>
                                        </form>

                                        <!-- Arşivle Butonu -->
                                        <form asp-controller="Message" asp-action="ArchiveDraft" method="post" style="display:inline-block;">
                                            <input type="hidden" name="messageId" value="@msg.MessageId" />
                                            <button type="submit" class="btn btn-default btn-sm" title="Mesajı Arşivle">
                                                <i class="fas fa-box"></i>
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer p-0">
            <div class="mailbox-controls">
                <button type="button" class="btn btn-default btn-sm checkbox-toggle">
                    <i class="far fa-square"></i>
                </button>
                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-sm"><i class="far fa-trash-alt"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-reply"></i></button>
                    <button type="button" class="btn btn-default btn-sm"><i class="fas fa-share"></i></button>
                </div>
                <button type="button" class="btn btn-default btn-sm"><i class="fas fa-sync-alt"></i></button>

                <div class="float-right">
                    1-@Model.Count / @Model.Count
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-left"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

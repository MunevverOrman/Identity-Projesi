@model List<Message>
@{
    ViewData["Title"] = "Arşivlenmiş Mesajlar";
    Layout = "~/Views/MainLayout/Index.cshtml";
}

<div class="col-md-9">
    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Arşivlenmiş Mesajlar</h3>

            <div class="card-tools">
                <div class="input-group input-group-sm">
                    <input type="text" class="form-control" placeholder="Search Mail">
                    <div class="input-group-append">
                        <div class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive mailbox-messages">
                <table class="table table-hover table-striped">
                    <!-- Başlık Satırı -->
                    <thead>
                        <tr>
                            <th>Okundu Bilgisi</th>
                            <th>Önemli</th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge @(item.IsRead ? "bg-success" : "bg-secondary")">
                                        @(item.IsRead ? "Okundu" : "Okunmadı")
                                    </span>
                                </td>

                                <td class="text-center">
                                    @if (item.IsImportant)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                </td>

                                <td class="mailbox-name">
                                    <a href="/Message/MessageDetail/@item.MessageId">
                                        @item.Sender.FirstName @item.Sender.LastName
                                    </a>
                                </td>

                                <td class="mailbox-subject"><b>@item.Subject</b></td>
                                <td>@item.SendDate.ToShortDateString()</td>

                                <td>
                                    <div class="btn-group" role="group">
                                        <form asp-controller="Message" asp-action="RestoreFromArchive" method="post">
                                            <input type="hidden" name="messageId" value="@item.MessageId" />
                                            <button type="submit" class="btn btn-default btn-sm" title="Geri Al">
                                                <i class="fas fa-mail-bulk"></i>
                                            </button>
                                        </form>

                                        <form asp-controller="Message" asp-action="MoveToTrashFromArchive" method="post">
                                            <input type="hidden" name="messageId" value="@item.MessageId" />
                                            <button type="submit" class="btn btn-default btn-sm" title="Sil">
                                                <i class="far fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
